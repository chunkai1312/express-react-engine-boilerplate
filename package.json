{
  "name": "express-react-engine-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for building express applications using react engine",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run prod",
    "prod": "npm run start:prod",
    "dev": "npm-run-all --parallel build:watch start:dev",
    "start:prod": "cross-env NODE_ENV=production node bin/server.js",
    "start:dev": "nodemon bin/server.js --ignore src/views --ignore public/js/bundle.js",
    "build": "npm run build:clean && npm run build:server && npm run build:client",
    "build:clean": "rimraf dist public/js/bundle.js",
    "build:server": "babel src -d dist --copy-files",
    "build:client": "cross-env NODE_ENV=production browserify -t babelify -t envify dist/views/index.js | uglifyjs -c warnings=false -m > public/js/bundle.js",
    "build:watch": "cross-env NODE_ENV=dev watchify -vd -p browserify-hmr -t babelify -t envify -e src/views/index.js -o public/js/bundle.js",
    "lint": "eslint src"
  },
  "author": "Chun-Kai Wang <chunkai1312@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.1",
    "compose-middleware": "^2.2.0",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "helmet": "^3.5.0",
    "method-override": "^2.3.8",
    "minimist": "^1.2.0",
    "morgan": "^1.8.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-engine": "^4.3.0",
    "react-router": "^3.0.0",
    "serve-favicon": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "browserify-hmr": "^0.3.5",
    "cross-env": "^4.0.0",
    "envify": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "uglify-js": "^2.8.22",
    "watchify": "^3.9.0"
  }
}
